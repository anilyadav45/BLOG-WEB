<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('layout.ejs') %>
    <div class="container">
        <h1 class="mt-2">Blog Posts</h1>
        <a href="/blogs/new" class="btn btn-success mb-3">Create New Blog</a>
        <% if (blogs && blogs.length > 0) { %> <!-- Check if there are blogs -->
            <% blogs.forEach(blog => { %> <!-- Loop through each blog -->
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= blog.title %>
                        </h5>
                        <p class="card-text">
                            <%= blog.content %>
                        </p>
                        <a href="/blogs/<%= blog.id %>" class="btn btn-primary">Read More</a>
                        <a href="/blogs/<%= blog.id %>/edit" class="btn btn-warning">Edit</a>
                        <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p>No blog posts available.</p>
        <% } %>

        
    </div>
</body>

</html>
